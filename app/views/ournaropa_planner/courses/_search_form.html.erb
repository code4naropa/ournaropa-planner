<%= form_tag search_path, :method => :get, :class => "col s12 valign" do %>

  <div class="row title">
    <h1 class="center-align">OurNaropa Course Planner</h1>
    <p class="center-align">Search Naropa Courses for Fall 2016.</p>
  </div>

  <div class="row remove-margins">

    <div class="input-field col s4 l3">
      <%= select_tag "filter", options_for_select(["Everything", "Title", "Instructor", "Description", "Course Code"], @filter) %>
      <label>What are you searching for?</label>
    </div>

    <div class="input-field col s12 l7">
      <i class="material-icons prefix">search</i>
      <%= text_field_tag(:query, @query, :class => "validate", :type => "text") %>
      <%= label_tag :query, "Type the search term..." %>
    </div>
    <div class="col s12 l2 center-align">
      <button type="submit" class="waves-effect waves-light btn-large">Search</button>
    </div>
  </div>

  <script type="text/javascript">
    // init materialize select
    $(document).ready(function() {
      $('select').material_select();
    });
  </script>

<% end %>